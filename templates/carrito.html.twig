{% extends 'base.html.twig' %}

{% block javascripts %}
    {{parent()}}

    <!--MIS SCRIPTS-->
    <script src="{{ asset('js/carrito.js') }}" type="text/javascript"></script>

{% endblock %}

{% block body %}

    <div class="container col-12">
        <div class="mb-4 mt-5"><a class="text-secondary" href="/">Home / </a><a class="text-secondary" href="/tienda">Tienda / </a><a class="text-secondary" href="/carrito"><u>Carrito</u></a></div>
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="text-uppercase mt-5">Carrito</h1>
        </div>
            <div class="row vh-90 justify-content-center align-align-items-center">
                <div class="col-auto">
                    <div class="table-responsive">
                        <div id="container">
                        </div>
                    </div>
                    <button class="borrar btn bg-light text-secondary">Eliminar del Carrito</button>
                    {% if app.user == null %}
                        <a href="/login" class="boton btn btn-secondary">Comprar</a>
                    {% endif %}
                    
                    {% if app.user != null %}
                        <button class="comprar boton btn btn-secondary">Comprar</button>
                    {% endif %}
                </div>
            </div>
    </div> 

{% endblock %}