{% extends 'base.html.twig' %}

{% block javascripts %}
    {{parent()}}

    <!--MIS SCRIPTS-->
    <script src="{{ asset('js/compra.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/producto.js') }}" type="text/javascript"></script>

{% endblock %}

{% block body %}

    <div class="container col-12">
        <div class="mb-4 mt-5"><a class="text-secondary" href="/">Home / </a><a class="text-secondary" href="/tienda">Tienda / </a><a class="text-secondary" href="/carrito"><u class="apartado"></u></a></div>
            <div class="row vh-90 justify-content-center align-align-items-center">
                <div class="col-auto">
                <div class="fotoP">
                    <img class="foto" height="500px" width="500px"/>
                </div>
                <div class="infoP">
                    <div>
                        <p class="nombre text-secondary text-uppercase"></p>
                    </div>
                    <div>
                        <p class="precio text-secondary"></p>
                    </div>
                    <div>
                        <p class="stock text-danger"></p>
                    </div>
                    <div>
                        <select name="talla"></select>
                    </div>
                    <div>
                        <p class="descripcion"></p>
                    </div>
                </div>
                    {% if app.user == null %}
                        <a href="/login" class="boton btn btn-secondary" id="{{id}}">Comprar</a>
                    {% endif %}
                    
                    {% if app.user != null %}
                        <button class="boton btn btn-secondary" id="{{id}}">Comprar</button>
                    {% endif %}
                </div>
            </div>
    </div> 

{% endblock %}