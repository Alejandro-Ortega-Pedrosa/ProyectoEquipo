{% extends 'base.html.twig' %}

{% block body %}
   {{parent()}}
    <!--BODY -->
    <div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="img/banner1.jpg" alt="Image">
                    <div class="carousel-caption d-flex align-items-center justify-content-center text-start">
                        <div class="mx-sm-5 px-5" style="max-width: 900px;">
                            <h1 class="t-move display-2 text-white text-uppercase mb-4 animated slideInDown">UN SIGLO DE ORGULLO</h1>
                            <h4 class="text-white mb-4 animated slideInDown"><i class="fab fa-facebook text-secondary me-3"></i> Real Jaén C.F.</h4>
                            <h4 class="text-white mb-4 animated slideInDown"><i class="fab fa-instagram text-secondary me-3"></i> realjaencf</h4>
                            <h4 class="text-white mb-4 animated slideInDown"><i class="fab fa-twitter text-secondary me-3"></i> RealJaenCF</h4>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="img/banner2.jpg" alt="Image">
                    <div class="carousel-caption d-flex align-items-center justify-content-center text-start">
                        <div class="mx-sm-5 px-5" style="max-width: 900px;">
                            <h1 class="t-move display-2 text-white text-uppercase mb-4 animated slideInDown">100 AÑOS PARA LA HISTORIA DE NUESTRA CIUDAD</h1>
                            <h4 class="text-white mb-4 animated slideInDown"><i class="fab fa-facebook text-secondary me-3"></i> Real Jaén C.F.</h4>
                            <h4 class="text-white mb-4 animated slideInDown"><i class="fab fa-instagram text-secondary me-3"></i> realjaencf</h4>
                            <h4 class="text-white mb-4 animated slideInDown"><i class="fab fa-twitter text-secondary me-3"></i> RealJaenCF</h4>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
   
   {% if app.user == null %}
    <div id="registro" class="container-xxl py-5">
        <div class="container">
            <div class="row g-0">
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="d-flex flex-column">
                        <img class="img-fluid w-75 align-self-end" src="img/escudo.jpg" alt="">
                        <div class="w-50 bg-secondary p-5" style="margin-top: -25%;">
                            <h1 class="text-uppercase text-primary mb-3">100 AÑOS</h1>
                            <h2 class="text-uppercase text-light mb-0">De Orgullo</h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="bg-secondary p-5">
                        <h1 class="text-uppercase text-primary mb-4">REGISTRO</h1>
                        <!--FORMULARIO-->
                        {{ form_start(registrationForm) }}
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(registrationForm.email,  {'attr': {'class': 'form-control bg-transparent'}}) }}
                                    {{ form_label(registrationForm.email) }}
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(registrationForm.nombre,  {'attr': {'class': 'form-control bg-transparent'}}) }}
                                    {{ form_label(registrationForm.nombre) }}
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(registrationForm.apellidos,  {'attr': {'class': 'form-control bg-transparent'}}) }}
                                    {{ form_label(registrationForm.apellidos) }}
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(registrationForm.plainPassword,  {'attr': {'class': 'form-control bg-transparent'}}) }}
                                    {{ form_label(registrationForm.plainPassword, 'Contraseña') }}
                                </div>
                            </div>
                        
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Registrarse</button>
                            </div>
                        </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

            <div class="container-xxl py-5">
                <div class="container">
                    <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                        <h1 class="text-uppercase bg-secondary text-primary">Partidos</h1>
                    </div>
                    <div class="row g-4">
            {% for partido in partidos %}
                    
                        <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="team-item">
                                <div class="bg-primary text-center p-5">
                                    <h5 class="text-uppercase  bg-secondary text-light">{{partido.local}}</h5>
                                    <h5 class="text-uppercase text-light">{{partido.resultado}}</h5>
                                    <h5 class="text-uppercase  bg-secondary text-light">{{partido.visitante}}</h5>
                                    <span class="text-secondary">{{partido.fecha}}</span>
                                    </br><span class="text-secondary">{{partido.hora}}</span>
                                </div>
                            </div>
                        </div>
                    
            {% endfor %}
            </div>
        </div>
    </div>

            <div class="container-xxl py-5">
                <div class="container">
                    <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                        <h1 class="text-uppercase bg-secondary text-primary">TIENDA OFICIAL</h1>
                    </div>
                    <div class="row g-4">
            {% for producto in productos %}
                    
                        <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="team-item">
                                <div class="overflow-hidden productoTienda" id="{{producto.id}}">
                                    <img class="img-fluid" src='imagenes/producto/{{producto.foto}}' alt="" width="300" height="200">
                                </div>
                                <div class="bg-primary text-center p-4">
                                    <h5 class="text-uppercase text-light">{{producto.nombre}}</h5>
                                    <span class="text-secondary">{{producto.precio}} €</span>
                                </div>
                            </div>
                        </div>
                    
            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
    